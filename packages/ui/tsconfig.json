{
  "extends": "../shared/tsconfig/library.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "composite": true,
    "paths": {
      "@turbo-super/api": ["../api/src"],
      "@turbo-super/core": ["../core/src"],
      "@turbo-super/features": ["../features/src"],
      "@turbo-super/shared": ["../shared/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../shared" }]
}
