{
  "extends": "@turbo-super/shared/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@turbo-super/ui": ["../../packages/ui/src"],
      "@turbo-super/shared": ["../../packages/shared/src"],
      "@turbo-super/api": ["../../packages/api/src"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules",
    "../../packages/api/src",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "src/tests/**/*"
  ]
}
