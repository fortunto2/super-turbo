{
  "name": "turbo-super",
  "version": "1.0.0",
  "private": true,
  "description": "SuperDuperAI турборепозиторий с Next.js приложениями и общими компонентами",
  "packageManager": "pnpm@9.12.3",
  "engines": {
    "node": ">=20.18.1",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "build:types": "turbo build:types",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "generate-translation-types": "cd packages/shared && npm run generate-types",
    "type-check": "turbo type-check",
    "clean": "turbo clean && rm -rf node_modules",
    "test": "turbo test"
  },
  "devDependencies": {
    "@turbo/gen": "^2.3.0",
    "turbo": "^2.3.0",
    "prettier": "^3.2.5",
    "typescript": "^5.6.3"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
} 