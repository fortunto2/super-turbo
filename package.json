{
  "name": "turbo-super",
  "version": "1.0.0",
  "private": true,
  "description": "SuperDuperAI турборепозиторий с Next.js приложениями и общими компонентами",
  "packageManager": "pnpm@9.12.3",
  "engines": {
    "node": ">=20.18.1",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "build:types": "turbo build:types",
    "build:packages": "node scripts/rebuild-packages.js",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "generate-translation-types": "cd packages/shared && npm run generate-types",
    "type-check": "turbo type-check",
    "clean": "turbo clean && node scripts/clean.js node_modules packages/*/node_modules",
    "clean:all": "node scripts/clean-workspace.js",
    "test": "turbo test",
    "sync-versions": "node scripts/sync-versions.js",
    "check-versions": "node scripts/check-versions.js",
    "validate": "pnpm run type-check && pnpm run lint && pnpm run test"
  },
  "devDependencies": {
    "@turbo/gen": "^2.3.0",
    "@types/minimatch": "^6.0.0",
    "glob": "^11.0.0",
    "prettier": "^3.2.5",
    "turbo": "^2.3.0",
    "typescript": "^5.6.3"
  },
  "pnpm": {
    "overrides": {
      "p-limit": "4.0.0"
    }
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}